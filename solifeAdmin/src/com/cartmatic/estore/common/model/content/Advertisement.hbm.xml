<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.cartmatic.estore.common.model.content.Advertisement"
        table="ADVERTISEMENT"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="advertisementId"
            column="advertisementId"
            type="java.lang.Integer"
            length="10"
        >
            <generator class="native"/>
        </id>
 		<version
            name="version"
            type="java.lang.Integer"
            column="version"
            access="property"
            unsaved-value="undefined"
        />
        <property
            name="advertisementName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="advertisementName"
            length="128"
            not-null="true"
            unique="false"
        />
        <property
            name="contentType"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="contentType"
            length="5"
            not-null="true"
            unique="false"
        />
        <property
            name="advertisementDetail"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="advertisementDetail"
            length="512"
            not-null="false"
            unique="false"
        />
        <property
            name="mediaPath"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="mediaPath"
            length="128"
            not-null="false"
            unique="false"
        />
        <property
            name="url"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="url"
            length="255"
            not-null="true"
            unique="false"
        />
        <property
            name="redirectUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="redirectUrl"
            length="255"
            not-null="false"
            unique="false"
        />
        <property
            name="target"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="target"
            length="32"
            not-null="false"
            unique="false"
        />
        
        <property
            name="startPublishTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="startPublishTime"
            length="0"
            not-null="false"
            unique="false"
        />
        <property
            name="endPublishTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="endPublishTime"
            length="0"
            not-null="false"
            unique="false"
        />
        <property
            name="sortOrder"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="sortOrder"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="createBy"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="createBy"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="updateBy"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="updateBy"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="createTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="createTime"
            length="0"
            not-null="false"
            unique="false"
        />
        <property
            name="updateTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="updateTime"
            length="0"
            not-null="false"
            unique="false"
        />
        <property
            name="isInclude"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="isInclude"
            length="5"
            not-null="false"
            unique="false"
        />

     <!-- imported bi-directional many-to-one association to AdPositionType -->
		<many-to-one
			name="adPositionType"
			class="com.cartmatic.estore.common.model.content.AdPositionType"
            not-null="false"
			fetch="select"
		>	
			<column name="adPositionTypeId" />
		</many-to-one>
 <!-- exported bi-directional one-to-many association to ProductAdvertisement -->
	<set name="productAdvertisements"
	     table="product_advertisement"
	     lazy="true"
	     inverse="true"
	     cascade="save-update"
	     sort="unsorted"
	>
		<key>
			<column name="advertisementId"/>
		</key>
		<one-to-many
			class="com.cartmatic.estore.common.model.content.ProductAdvertisement"
		/>
	</set>     
    </class>
</hibernate-mapping>
