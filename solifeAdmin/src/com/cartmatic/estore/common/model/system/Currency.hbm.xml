<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.cartmatic.estore.common.model.system.Currency"
        table="currency"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="currencyId"
            column="currencyId"
            type="java.lang.Integer"
            length="10"
        >
            <generator class="native"/>
        </id>
 		<version
            name="version"
            type="java.lang.Integer"
            column="version"
            access="property"
            unsaved-value="undefined"
        />
        <property
            name="currencyCode"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="currencyCode"
            length="8"
            not-null="true"
            unique="false"
        />
        <property
            name="currencyName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="currencyName"
            length="32"
            not-null="true"
            unique="false"
        />
        <property
            name="isDefault"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="isDefault"
            length="5"
            not-null="false"
            unique="false"
        />
        <property
            name="status"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="status"
            length="5"
            not-null="false"
            unique="false"
        />
        <property
            name="sortOrder"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="sortOrder"
            length="10"
            not-null="false"
            unique="false"
        />
        <property
            name="exchangeRate"
            type="java.math.BigDecimal"
            update="true"
            insert="true"
            access="property"
            column="exchangeRate"
            precision="12"
            scale="4"
            not-null="false"
            unique="false"
        />
        <property
            name="currencySymbol"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="currencySymbol"
            length="16"
            not-null="true"
            unique="false"
        />
     </class>
</hibernate-mapping>
