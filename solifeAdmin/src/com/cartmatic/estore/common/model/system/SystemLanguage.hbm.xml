<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.cartmatic.estore.common.model.system.SystemLanguage"
        table="system_language"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<!--The unsaved-value attribute is almost never needed in Hibernate3. (From hibernate doc.)-->
		<id
            name="systemLanguageId"
            column="systemLanguageId"
            type="java.lang.Integer"
        >
            <generator class="native"/>
        </id>
		<version
            name="version"
            type="java.lang.Integer"
            column="version"
            access="property"
            unsaved-value="undefined"
        />
        <property
            name="languageNameKey"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="languageNameKey"
            length="32"
            not-null="true"
            unique="false"
        />
        <property
            name="localeCode"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="localeCode"
            length="8"
            not-null="true"
            unique="false"
        />
        <property
            name="status"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="status"
            length="6"
            not-null="false"
            unique="false"
        />
        <property
            name="isDefault"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="isDefault"
            length="5"
            not-null="false"
            unique="false"
        />
        <property
         name="sortOrder"
         type="java.lang.Integer"
         update="true"
         insert="true"
         access="property"
         column="sortOrder"
         not-null="false"
         unique="false"
         />
    </class>
</hibernate-mapping>
