<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.cartmatic.estore.common.model.order.OrderPayment"
        table="order_payment"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="orderPaymentId"
            column="orderPaymentId"
            type="java.lang.Integer"
            length="10"
        >
            <generator class="native"/>
        </id>
 		<version
            name="version"
            type="java.lang.Integer"
            column="version"
            access="property"
            unsaved-value="undefined"
        />
        <property
            name="paymentAmount"
            type="java.math.BigDecimal"
            update="true"
            insert="true"
            access="property"
            column="paymentAmount"
            precision="12"
            scale="2"
            not-null="true"
            unique="false"
        />
        <property
            name="balance"
            type="java.math.BigDecimal"
            update="true"
            insert="true"
            access="property"
            column="balance"
            precision="12"
            scale="2"
            not-null="true"
            unique="false"
        />
        <property
            name="transactionType"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="transactionType"
            length="5"
            not-null="true"
            unique="false"
        />
        <property
            name="paymentGatewayName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="paymentGatewayName"
            length="256"
            not-null="false"
            unique="false"
        />
        <property
            name="ipAddress"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="ipAddress"
            length="64"
            not-null="false"
            unique="false"
        />
        <property
            name="giftCertificateNo"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="giftCertificateNo"
            length="32"
            not-null="false"
            unique="false"
        />
        <property
            name="addedBy"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="addedBy"
            length="32"
            not-null="true"
            unique="false"
        />
        <property
            name="createTime"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="createTime"
            length="0"
            not-null="true"
            unique="false"
        />
     <!-- imported bi-directional many-to-one association to SalesOrder -->
		<many-to-one
			name="salesOrder"
			class="com.cartmatic.estore.common.model.order.SalesOrder"
            not-null="false"
			fetch="select"
		>	
			<column name="salesOrderId" />
		</many-to-one>
    </class>
</hibernate-mapping>
