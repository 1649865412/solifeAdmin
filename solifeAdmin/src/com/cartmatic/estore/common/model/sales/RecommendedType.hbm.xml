<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="com.cartmatic.estore.common.model.sales.RecommendedType"
        table="recommended_type"
        select-before-update="false"
        dynamic-update="false"
        dynamic-insert="false"
        optimistic-lock="version"
    >
		<id
            name="recommendedTypeId"
            column="recommendedTypeId"
            type="java.lang.Integer"
            length="11"
        >
            <generator class="native"/>
        </id>
 		<version
            name="version"
            type="java.lang.Integer"
            column="version"
            access="property"
            unsaved-value="undefined"
        />
        <property
            name="typeName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="typeName"
            length="64"
            not-null="true"
            unique="false"
        />
        <property
            name="autoEval"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="autoEval"
            length="6"
            not-null="true"
            unique="false"
        />
        <property
            name="ruleCode"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="ruleCode"
            length="11"
            not-null="false"
            unique="false"
        />
        <property
            name="status"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="status"
            length="6"
            not-null="true"
            unique="false"
        />
        <property
            name="isSystem"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="isSystem"
            length="6"
            not-null="true"
            unique="false"
        />
        <property
            name="recommendTitle"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="recommendTitle"
            length="128"
            not-null="false"
            unique="false"
        />
        <property
            name="templatePath"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="templatePath"
            length="128"
            not-null="false"
            unique="false"
        />
        <property
            name="isApplyToProduct"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="isApplyToProduct"
            length="6"
            not-null="false"
            unique="false"
        />
        <property
            name="isApplyToCategory"
            type="java.lang.Short"
            update="true"
            insert="true"
            access="property"
            column="isApplyToCategory"
            length="6"
            not-null="false"
            unique="false"
        />
  <!-- exported bi-directional one-to-many association to RecommendedProduct -->
	<set name="recommendedProducts"
	     table="recommended_product"
	     lazy="true"
	     inverse="true"
	     cascade="delete"
	     sort="unsorted"
	>
		<key>
			<column name="recommendedTypeId"/>
		</key>
		<one-to-many
			class="com.cartmatic.estore.common.model.sales.RecommendedProduct"
		/>
	</set>     
    </class>
</hibernate-mapping>
